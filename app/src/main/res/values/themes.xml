<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.EscarletsForest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Shape styles -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.EscarletsForest.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.EscarletsForest.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.EscarletsForest.LargeComponent</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.EscarletsForest.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.EscarletsForest.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.EscarletsForest.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.EscarletsForest.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.EscarletsForest.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.EscarletsForest.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.EscarletsForest.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.EscarletsForest.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.EscarletsForest.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.EscarletsForest.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.EscarletsForest.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.EscarletsForest.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.EscarletsForest.Overline</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.EscarletsForest.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.EscarletsForest</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.EscarletsForest.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.EscarletsForest.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.EscarletsForest.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.EscarletsForest.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Headline4" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Headline5" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Headline6" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Subtitle1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Subtitle2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.EscarletsForest.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Custom component styles -->
    <style name="Widget.EscarletsForest.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="Widget.EscarletsForest.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Widget.EscarletsForest.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="backgroundTint">@color/secondary_light</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Widget.EscarletsForest.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">@color/white</item>
    </style>
    
</resources> 